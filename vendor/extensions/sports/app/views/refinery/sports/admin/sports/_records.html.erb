<%= render 'refinery/admin/search_header', :url => refinery.sports_admin_sports_path %>
<div class='pagination_container'>
  <% if @sports.any? %>
    <%= render 'sports' %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('no_results', :scope => 'refinery.admin.search') %>
      <% end %>
    </p>
  <% end %>
</div>
