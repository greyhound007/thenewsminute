<ul>
  <% if ::Refinery::News::Admin::NewsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.news_admin_news_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_news_admin_new_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::News::Admin::NewsController.sortable? && ::Refinery::News::New.many? %>
  <li>
    <%= link_to t('.reorder', :what => "News"),
                 refinery.news_admin_news_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "News"),
                 refinery.news_admin_news_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
