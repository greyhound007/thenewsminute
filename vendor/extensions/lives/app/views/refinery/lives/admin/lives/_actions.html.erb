<ul>
  <% if ::Refinery::Lives::Admin::LivesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.lives_admin_lives_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_lives_admin_life_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Lives::Admin::LivesController.sortable? && ::Refinery::Lives::Life.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Lives"),
                 refinery.lives_admin_lives_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Lives"),
                 refinery.lives_admin_lives_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
