<ul>
  <% if ::Refinery::Stories::Admin::StoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.stories_admin_stories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_stories_admin_story_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Stories::Admin::StoriesController.sortable? && ::Refinery::Stories::Story.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Stories"),
                 refinery.stories_admin_stories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Stories"),
                 refinery.stories_admin_stories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
