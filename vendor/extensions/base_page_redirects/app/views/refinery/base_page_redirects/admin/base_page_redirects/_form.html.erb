<%= form_for [refinery, :base_page_redirects_admin, @base_page_redirect] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @base_page_redirect,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :Homepage_Headline -%>
    <%= f.text_field :Homepage_Headline, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.base_page_redirects.admin.base_page_redirects.base_page_redirect'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @base_page_redirect.Homepage_Headline) -%>
<% end -%>
