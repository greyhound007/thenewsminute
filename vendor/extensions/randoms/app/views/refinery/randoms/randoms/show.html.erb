<% content_for :body_content_title do %>
  <%= @random.headline %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Headline</h1>
    <p>
      <%=raw @random.headline %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @random.url %>
    </p>
  </section>
  <section>
    <h1>Tags</h1>
    <p>
      <%=raw @random.tags %>
    </p>
  </section>
  <section>
    <h1>Source</h1>
    <p>
      <%=raw @random.source %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @random.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="randoms">
      <% @randoms.each do |random| %>
        <li>
          <%= link_to random.headline, refinery.randoms_random_path(random) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
