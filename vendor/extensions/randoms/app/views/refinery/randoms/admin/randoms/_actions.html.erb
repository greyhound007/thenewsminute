<ul>
  <% if ::Refinery::Randoms::Admin::RandomsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.randoms_admin_randoms_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_randoms_admin_random_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Randoms::Admin::RandomsController.sortable? && ::Refinery::Randoms::Random.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Randoms"),
                 refinery.randoms_admin_randoms_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Randoms"),
                 refinery.randoms_admin_randoms_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
