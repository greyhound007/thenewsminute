<ul>
  <% if ::Refinery::Redirects::Admin::RedirectsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.redirects_admin_redirects_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_redirects_admin_redirect_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Redirects::Admin::RedirectsController.sortable? && ::Refinery::Redirects::Redirect.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Redirects"),
                 refinery.redirects_admin_redirects_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Redirects"),
                 refinery.redirects_admin_redirects_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
