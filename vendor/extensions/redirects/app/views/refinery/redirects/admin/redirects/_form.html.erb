<%= form_for [refinery, :redirects_admin, @redirect] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @redirect,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :Homepage_Headline -%>
    <%= f.text_field :Homepage_Headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :Mainpage_url -%>
    <%= f.text_field :Mainpage_url -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.redirects.admin.redirects.redirect'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @redirect.Homepage_Headline) -%>
<% end -%>
