<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(world) -%>">
  <span class='title'>
    <%= world.Main_headline %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.worlds_world_path(world),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_worlds_admin_world_path(world),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.worlds_admin_world_path(world),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => world.Main_headline),
        :method => :delete %>
  </span>
</li>
