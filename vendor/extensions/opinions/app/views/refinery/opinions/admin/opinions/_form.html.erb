<%= form_for [refinery, :opinions_admin, @opinion] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @opinion,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @opinion.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :headline2 -%>
    <%= f.text_field :headline2 -%>
  </div>

  <div class='field'>
    <%= f.label :url2 -%>
    <%= f.text_field :url2 -%>
  </div>

  <div class='field'>
    <%= f.label :headline3 -%>
    <%= f.text_field :headline3 -%>
  </div>

  <div class='field'>
    <%= f.label :url3 -%>
    <%= f.text_field :url3 -%>
  </div>

  <div class='field'>
    <%= f.label :headline4 -%>
    <%= f.text_field :headline4 -%>
  </div>

  <div class='field'>
    <%= f.label :url4 -%>
    <%= f.text_field :url4 -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.opinions.admin.opinions.opinion'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @opinion.headline) -%>
<% end -%>
