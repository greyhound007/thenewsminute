<ul>
  <% if ::Refinery::Opinions::Admin::OpinionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.opinions_admin_opinions_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_opinions_admin_opinion_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Opinions::Admin::OpinionsController.sortable? && ::Refinery::Opinions::Opinion.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Opinions"),
                 refinery.opinions_admin_opinions_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Opinions"),
                 refinery.opinions_admin_opinions_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
