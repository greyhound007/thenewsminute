<% content_for :body_content_title do %>
  <%= @opinion_corner.headline %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Headline</h1>
    <p>
      <%=raw @opinion_corner.headline %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @opinion_corner.link %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @opinion_corner.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @opinion_corner.author %>
    </p>
  </section>
  <section>
    <h1>Headline2</h1>
    <p>
      <%=raw @opinion_corner.headline2 %>
    </p>
  </section>
  <section>
    <h1>Link2</h1>
    <p>
      <%=raw @opinion_corner.link2 %>
    </p>
  </section>
  <section>
    <h1>Headline3</h1>
    <p>
      <%=raw @opinion_corner.headline3 %>
    </p>
  </section>
  <section>
    <h1>Link3</h1>
    <p>
      <%=raw @opinion_corner.link3 %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="opinion_corners">
      <% @opinion_corners.each do |opinion_corner| %>
        <li>
          <%= link_to opinion_corner.headline, refinery.opinion_corners_opinion_corner_path(opinion_corner) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
