<ul>
  <% if ::Refinery::OpinionCorners::Admin::OpinionCornersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.opinion_corners_admin_opinion_corners_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_opinion_corners_admin_opinion_corner_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::OpinionCorners::Admin::OpinionCornersController.sortable? && ::Refinery::OpinionCorners::OpinionCorner.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Opinion Corners"),
                 refinery.opinion_corners_admin_opinion_corners_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Opinion Corners"),
                 refinery.opinion_corners_admin_opinion_corners_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
