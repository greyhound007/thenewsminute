<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(latest) -%>">
  <span class='title'>
    <%= latest.headline %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.latests_latest_path(latest),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_latests_admin_latest_path(latest),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.latests_admin_latest_path(latest),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => latest.headline),
        :method => :delete %>
  </span>
</li>
