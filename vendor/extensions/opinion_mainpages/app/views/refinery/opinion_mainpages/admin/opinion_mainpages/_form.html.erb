<%= form_for [refinery, :opinion_mainpages_admin, @opinion_mainpage] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @opinion_mainpage,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @opinion_mainpage.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.opinion_mainpages.admin.opinion_mainpages.opinion_mainpage'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @opinion_mainpage.headline) -%>
<% end -%>
