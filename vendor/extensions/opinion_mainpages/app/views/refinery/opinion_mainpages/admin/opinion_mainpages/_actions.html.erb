<ul>
  <% if ::Refinery::OpinionMainpages::Admin::OpinionMainpagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.opinion_mainpages_admin_opinion_mainpages_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_opinion_mainpages_admin_opinion_mainpage_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::OpinionMainpages::Admin::OpinionMainpagesController.sortable? && ::Refinery::OpinionMainpages::OpinionMainpage.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Opinion Mainpages"),
                 refinery.opinion_mainpages_admin_opinion_mainpages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Opinion Mainpages"),
                 refinery.opinion_mainpages_admin_opinion_mainpages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
