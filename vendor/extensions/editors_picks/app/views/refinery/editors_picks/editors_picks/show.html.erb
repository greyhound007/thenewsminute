<% content_for :body_content_title do %>
  <%= @editors_pick.headline %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Headline</h1>
    <p>
      <%=raw @editors_pick.headline %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @editors_pick.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="editors_picks">
      <% @editors_picks.each do |editors_pick| %>
        <li>
          <%= link_to editors_pick.headline, refinery.editors_picks_editors_pick_path(editors_pick) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
