<ul>
  <% if ::Refinery::EditorsPicks::Admin::EditorsPicksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.editors_picks_admin_editors_picks_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_editors_picks_admin_editors_pick_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::EditorsPicks::Admin::EditorsPicksController.sortable? && ::Refinery::EditorsPicks::EditorsPick.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Editors Picks"),
                 refinery.editors_picks_admin_editors_picks_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Editors Picks"),
                 refinery.editors_picks_admin_editors_picks_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
