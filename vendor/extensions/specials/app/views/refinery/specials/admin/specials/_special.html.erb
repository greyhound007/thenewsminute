<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(special) -%>">
  <span class='title'>
    <%= special.headline %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.specials_special_path(special),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_specials_admin_special_path(special),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.specials_admin_special_path(special),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => special.headline),
        :method => :delete %>
  </span>
</li>
