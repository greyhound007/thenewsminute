<%= form_for [refinery, :specials_admin, @special] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @special,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :tags -%>
    <%= f.text_field :tags -%>
  </div>

  <div class='field'>
    <%= f.label :source -%>
    <%= f.text_field :source -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @special.image,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.specials.admin.specials.special'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @special.headline) -%>
<% end -%>
