<ul>
  <% if ::Refinery::Headlines::Admin::HeadlinesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.headlines_admin_headlines_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_headlines_admin_headline_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Headlines::Admin::HeadlinesController.sortable? && ::Refinery::Headlines::Headline.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Headlines"),
                 refinery.headlines_admin_headlines_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Headlines"),
                 refinery.headlines_admin_headlines_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
