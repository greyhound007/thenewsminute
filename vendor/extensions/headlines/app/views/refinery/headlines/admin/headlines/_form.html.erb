<%= form_for [refinery, :headlines_admin, @headline] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @headline,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :main_headline -%>
    <%= f.text_field :main_headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :main_photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :main_photo_id,
               :image => @headline.main_photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :main_blurb -%>
    <%= f.text_field :main_blurb -%>
  </div>

  <div class='field'>
    <%= f.label :main_link -%>
    <%= f.text_field :main_link -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_headline_1 -%>
    <%= f.text_field :main_story_link_headline_1 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_1 -%>
    <%= f.text_field :main_story_link_1 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_source_1 -%>
    <%= f.text_field :main_story_link_source_1 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_headline_2 -%>
    <%= f.text_field :main_story_link_headline_2 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_2 -%>
    <%= f.text_field :main_story_link_2 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_source_2 -%>
    <%= f.text_field :main_story_link_source_2 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_headline_3 -%>
    <%= f.text_field :main_story_link_headline_3 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_3 -%>
    <%= f.text_field :main_story_link_3 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_source_3 -%>
    <%= f.text_field :main_story_link_source_3 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_headline_4 -%>
    <%= f.text_field :main_story_link_headline_4 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_4 -%>
    <%= f.text_field :main_story_link_4 -%>
  </div>

  <div class='field'>
    <%= f.label :main_story_link_source_4 -%>
    <%= f.text_field :main_story_link_source_4 -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.headlines.admin.headlines.headline'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @headline.main_headline) -%>
<% end -%>
