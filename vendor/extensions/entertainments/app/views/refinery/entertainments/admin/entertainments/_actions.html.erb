<ul>
  <% if ::Refinery::Entertainments::Admin::EntertainmentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.entertainments_admin_entertainments_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_entertainments_admin_entertainment_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Entertainments::Admin::EntertainmentsController.sortable? && ::Refinery::Entertainments::Entertainment.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Entertainments"),
                 refinery.entertainments_admin_entertainments_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Entertainments"),
                 refinery.entertainments_admin_entertainments_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
