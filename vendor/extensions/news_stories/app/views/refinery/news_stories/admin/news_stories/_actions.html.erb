<ul>
  <% if ::Refinery::NewsStories::Admin::NewsStoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.news_stories_admin_news_stories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_news_stories_admin_news_story_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::NewsStories::Admin::NewsStoriesController.sortable? && ::Refinery::NewsStories::NewsStory.many? %>
  <li>
    <%= link_to t('.reorder', :what => "News Stories"),
                 refinery.news_stories_admin_news_stories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "News Stories"),
                 refinery.news_stories_admin_news_stories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
