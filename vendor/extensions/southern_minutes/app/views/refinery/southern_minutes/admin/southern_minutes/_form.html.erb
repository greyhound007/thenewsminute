<%= form_for [refinery, :southern_minutes_admin, @southern_minute] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @southern_minute,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @southern_minute.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.southern_minutes.admin.southern_minutes.southern_minute'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @southern_minute.headline) -%>
<% end -%>
