<ul>
  <% if ::Refinery::Politics::Admin::PoliticsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.politics_admin_politics_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_politics_admin_politic_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Politics::Admin::PoliticsController.sortable? && ::Refinery::Politics::Politic.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Politics"),
                 refinery.politics_admin_politics_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Politics"),
                 refinery.politics_admin_politics_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
