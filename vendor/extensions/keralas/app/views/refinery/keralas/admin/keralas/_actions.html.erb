<ul>
  <% if ::Refinery::Keralas::Admin::KeralasController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.keralas_admin_keralas_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_keralas_admin_kerala_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Keralas::Admin::KeralasController.sortable? && ::Refinery::Keralas::Kerala.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Keralas"),
                 refinery.keralas_admin_keralas_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Keralas"),
                 refinery.keralas_admin_keralas_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
