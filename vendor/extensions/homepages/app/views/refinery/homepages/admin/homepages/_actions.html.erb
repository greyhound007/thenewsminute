<ul>
  <% if ::Refinery::Homepages::Admin::HomepagesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.homepages_admin_homepages_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_homepages_admin_homepage_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Homepages::Admin::HomepagesController.sortable? && ::Refinery::Homepages::Homepage.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Homepages"),
                 refinery.homepages_admin_homepages_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Homepages"),
                 refinery.homepages_admin_homepages_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
