<%= form_for [refinery, :elephants_admin, @elephant] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @elephant,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :headline -%>
    <%= f.text_field :headline, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @elephant.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :author -%>
    <%= f.text_field :author -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.elephants.admin.elephants.elephant'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @elephant.headline) -%>
<% end -%>
